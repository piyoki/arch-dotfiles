chosen=$(printf "  Reload\n  Sleep\n  Lock\n  Log Out\n  Power Off\n  Restart" | rofi -dmenu -i -theme-str '@import "powermenu.rasi"')

case "$chosen" in
	"  Reload") $HOME/.local/scripts/reload ;;
	"  Sleep") $HOME/.local/scripts/sleep ;;
	"  Lock") betterlockscreen -l ;;
	"  Log Out") bspc quit ;;
	"  Power Off") poweroff ;;
	"  Restart") reboot ;;
	*) exit 1 ;;
esac
