#!/usr/bin/env bash
rofi_command="rofi -theme $HOME/.config/rofi/conf/launcher.rasi"

# Options
sleep="  Sleep"
lock="  Lock"
reload="  Reload"
logout="󰗼  Logout"
poweroff="  Power Off"
reboot="󰠠  Reboot"
idlestart="  Swayidle Start"
idlestop="󱫫  Swayidle stop"
ddir="$HOME/.config/rofi/config"

# Variable passed to rofi
options="$sleep\n$lock\n$reload\n$logout\n$poweroff\n$reboot\n$idlestart\n$idlestop"

chosen="$(echo -e "$options" | $rofi_command -p "powermenu" -dmenu -selected-row 0)"
case $chosen in
$sleep)
    $HOME/.local/scripts/sleep ;;
$lock)
    swaylock -c 000000 ;;
$reload)
    hyprctl reload ;;
$logout)
    pkill -9 -u $USER ;;
$poweroff)
    systemctl -i poweroff ;;
$reboot)
    systemctl reboot ;;
$idlestart)
    $HOME/.config/hypr/scripts/autosleep.sh ;;
$idlestop)
    pkill swayidle ;;
esac
